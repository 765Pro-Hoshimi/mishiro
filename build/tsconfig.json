  "compilerOptions": {
    "strict": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": [
      "../node_module/@types",
      "../src/@types"
    ]
  }
}
